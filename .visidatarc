# How visidata colours work is described here: https://github.com/saulpw/visidata/issues/290
# TL;DR: 233 black means use colour 233, if that is not available fall back to black
options.color_default = '223 grey on 235 black'
options.color_menu = 'bold 235 black on 110 cyan'
options.color_menu_help = 'bold 235 black on 110 cyan'
options.color_status = 'bold 235 black on 110 cyan'
options.color_active_status = 'bold 235 black on 110 cyan'

# Show current position in status bar
options.disp_status_fmt = '({sheet.cursorRowIndex},{sheet.cursorColIndex}) ' + options.disp_status_fmt

